{% extends 'base.html.twig' %}

{% block metaRobots %}noindex,follow{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    {{ inline_css('build/archive.css') }}

{% endblock %}


{% block bodyMainContent %}

    <!-- ARCHIVE bodyMainContent START -->

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about-author-content mt-10">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item"><i class="fa-solid fa-pen"></i> <a href="{{ path('app_article_new') }}">Nuovo articolo</a></li>
                            <li class="breadcrumb-item"><i class="fa-solid fa-images"></i> Immagini orfane</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h1 class="title">Immagini orfane: {{ num }}</h1>
                    <p class="tli-readable-text">
                        Le seguenti immagini non sono utilizzate da alcun articolo, e saranno presto cancellate automaticamente.
                        Per evitare che questo accada, inseriscile nel testo di un articolo, oppure
                        salva una copia dell'immagine che vuoi conservare sul tuo PC.
                    </p>
                </div>

            </div>
        </div>
    </div>

    {% block beforeArticleList %}{% endblock %}

    <section class="about-item-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="about-tab-btn mt-20">
                        <div class="about-post-items">

                            <div class="row">

                                {% for Image in Images  %}

                                    <div class="col-lg-4 col-md-4">
                                        <div class="trending-news-item mb-30">

                                            <div class="trending-news-thumb">
                                                <a href="{{ Image.url(ImageSizes.max) }}" target="_blank">
                                                    <img src="{{ Image.url(ImageSizes.max) }}"
                                                         class="tli-uniform-slider-image" loading="lazy">
                                                </a>
                                            </div>

                                        </div>
                                    </div>

                                {% endfor %}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ARCHIVE bodyMainContent END -->

{% endblock %}
