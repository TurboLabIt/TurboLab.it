        {# this is the content displayed as a panel in the toolbar #}
        <img src="/favicon.ico">
        <span class="sf-toolbar-value">TLI</span>
    {% endset %}

    {% set text %}
        <div class="sf-toolbar-info-piece tli-web-debug-toolbar-extension-item">
            <strong>
                <i class="fa-solid fa-user" style="color: #63E6BE;"></i>
                <a href="/ajax/login/">Magic login</a>
            </strong>
        </div>
        <div class="sf-toolbar-info-piece tli-web-debug-toolbar-extension-item"><br>
            <strong>
                <i class="fa-brands fa-github" style="color: #000000;"></i>
                <a href="https://github.com/TurboLabIt/TurboLab.it"
