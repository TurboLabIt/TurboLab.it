<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for Item in Items %}
        <url>
            <loc>{{ Item.url }}</loc>
            {% if Item.lastmod is defined and Item.lastmod is not empty %}
                <lastmod>{{ Item.lastmod }}</lastmod>
            {% endif %}
            {# Google still doesn't use the changefreq or priority elements at all #}
            {# ðŸ“š https://developers.google.com/search/blog/2023/06/sitemaps-lastmod-ping #}
            <changefreq>{{ Item.changefreq ?? 'daily' }}</changefreq>
            {% if Item.priority is defined and Item.priority != 0.5 %}
                <priority>{{ Item.priority }}</priority>
            {% endif %}
        </url>
    {% endfor %}
</urlset>
