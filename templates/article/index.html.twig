{% extends 'base.html.twig' %}

{% block htmlArticleContent %}
    <h1>{{ Article.title|raw }}</h1>

    <div>
        {% if Article.Authors is not empty %}
            <span>
                a cura di
                {% for Author in Article.Authors %}
                    <a href="">{{ Author.User.username }}</a>
                    {% if not loop.last %}, {% endif %}
                {% endfor %}
                 |
            </span>
        {% endif %}

        <span>ultimo aggiornamento: {{ Article.updatedAt|friendlyDate }} | </span>

        {% if Article.Tags is not empty %}
            <span>
                {% for Tag in Article.Tags %}
                    <a href="{{ Tag.Tag.url }}">{{ Tag.Tag.title }}</a>
                    {% if not loop.last %} â€¢ {% endif %}
                {% endfor %}
                 |
            </span>
        {% endif %}

        {% if Article.views > 1 %}
            <span>visualizzato {{ Article.views|friendlyNum }} volte</span>
        {% endif %}
    </div>

    <div>{{ Article.bodyForDisplay|raw }}</div>
{% endblock %}
