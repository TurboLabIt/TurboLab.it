{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}
    {{ inline_css('build/article.css') }}

{% endblock %}

{% block bodyMainContent %}

    <section class="post-layout-1-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="about-author-content">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                                <li class="breadcrumb-item">Info</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- INFO main content START -->
                <article class="col-lg-8">

                    <div class="post-layout-top-content post-layout-top-content-3 tli-article-main-content">

                        <div class="post-content">
                            <h1 class="title">{{ metaTitle }}</h1>
                        </div>

                        <div class="post-text mt-30">

                            <p>Le informazioni aggiornate sono estrapolate "live" ad ogni caricamento della pagina.</p>

                            <table class="table table-striped table-hover">
                                {% for label,value in ServerInfo %}
                                    <tr><td>{{ label }}</td><td>{{ value }}</td></tr>
                                {% endfor %}
                            </table>

                            <h3 class="mt-20">Sito irraggiungibile?</h3>
                            <p>Seguici sui social per essere informato quando il sito diviene irraggiungibile.</p>

                            {% embed 'parts/social-icons.html.twig' with {'SocialLinks': FrontendHelper.InCaseOfDownSocialLinks} only %}
                                {% block socialIconsTitle %}{% endblock %}
                            {% endembed %}

                            <h3 class="mt-20">Vuoi segnalare un problema con il sito?</h3>
                            <p>
                                Se hai trovato qualcosa che non va oppure vuoi suggerire un miglioramento,
                                leggi questa guida:
                                <a href="{{ IssueReportGuide.url }}">
                                    <i class="fa-solid fa-bug" style="color: #26a269;"></i> {{ IssueReportGuide.title|raw }}
                                </a>
                            </p>

                            <h3>Codice sorgente</h3>
                            <p>
                                Il codice sorgente di TurboLab.it Ã¨ disponibile pubblicamente:
                                <a href="https://github.com/TurboLabIt/TurboLab.it" target="_blank">
                                    <i class="fa-brands fa-github"></i> TurboLabIt/TurboLab.it
                                </a>.
                            </p>

                        </div>

                    </div>

                </article>
                <!-- INFO main END -->

                {% include 'parts/column-articles.html.twig' %}

            </div>
        </div>
    </section>

    <!-- INFO bodyMainContent END -->
{% endblock %}
