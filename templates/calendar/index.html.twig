{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="preload" href="{{ asset('build/calendar.css') }}"
        as="style" onload="this.onload=null;this.rel='stylesheet'">

{% endblock %}

{% block bodyMainContent %}
    <!-- ARCHIVE bodyMainContent START -->

    <div class="container mt-20">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h1 class="title">{{ metaTitle }}</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="about-item-area mb-10">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div id="calendar" data-events-loading-url="{{ calendarEventsLoadingUrl }}"
                         data-min-date="{{ minCalendarDate }}" data-max-date="{{ maxCalendarDate }}"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- ARCHIVE bodyMainContent END -->
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.18/index.global.min.js' defer></script>
    {{ encore_entry_script_tags('calendar') }}

{% endblock %}
